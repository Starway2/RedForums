@using RedForums.Models
@model PostInputModel
@{
}
<div class="row">
    <div class="col-md-6 text-center container">
            <p class="h3">Create new post</p>
        <form asp-controller="Post" asp-action="Create" method="post">
            <div class="form-floating my-2 col-md-8 offset-2">
                <input asp-for="Title" class="form-control" aria-required="true" />
                <label asp-for="Title" class="form-label"></label>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-floating my-2">
                <textarea asp-for="Content" class="form-control"></textarea>
                <label asp-for="Content" class="form-label"></label>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="CategoryId" value="@Model.CategoryId" />
            <button type="submit" class="btn btn-danger">Create</button>
        </form>
    </div>
</div>


